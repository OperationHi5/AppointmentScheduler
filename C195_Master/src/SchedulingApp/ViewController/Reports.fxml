                    <HBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </HBox.margin>
                </VBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Button fx:id="generateAppointmentTypeByMonthButton" mnemonicParsing="false" onAction="#openAppointmentsByTypeWindow" prefHeight="30.0" prefWidth="85.0" text="Run Report" />
