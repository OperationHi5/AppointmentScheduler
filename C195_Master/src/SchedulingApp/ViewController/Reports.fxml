                        <Button fx:id="generateConsultantScheduleButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="87.0" text="Run Report" />
                        <Pane prefHeight="200.0" prefWidth="200.0" />
                        <Button fx:id="generateCustomerScheduleButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="87.0" text="Run Report" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <Button fx:id="exitReportsButton" layoutX="393.0" layoutY="186.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="87.0" text="Exit" />
    </children>
